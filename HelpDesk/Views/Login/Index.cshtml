@model LoginModel
@{
    ViewData["title"] = "Pagina de login";
    Layout = "_LayoutLogin";
}

@if (TempData["MensagemErro"] != null)
{
    <div class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 1055;">
        <div class="toast show toast-shor" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header">
                <strong class="me-auto">Error</strong>
                <small>Agora</small>
                <button type="button" class="btn-close" aria-label="Fechar"></button>
            </div>
            <div class="toast-body">
                @TempData["MensagemErro"]
            </div>
        </div>
    </div>
}

<div class="card shadow-sm p-4" style="max-width: 380px; width: 100%;">

    <div class="text-center mb-4">
        <h1 class="h4 fw-bold">Login</h1>
        <p class="text-muted mb-0">Acesse sua conta</p>
    </div>

    <form asp-action="FazerLogin" asp-controller="Login" method="post">
        <div class="form-floating mb-3">
            <input type="text"
                   class="form-control"
                   id="email"
                   placeholder="Digite seu login..." asp-for="Login" />
            <label for="email">Login</label>
        </div>

        <div class="form-floating mb-3">
            <input type="password"
                   class="form-control"
                   id="password"
                   placeholder="Senha" asp-for="Senha"/>
            <label for="password">Senha</label>
        </div>

        <button type="submit" class="btn btn-primary w-100">
            Entrar
        </button>
    </form>


</div>
